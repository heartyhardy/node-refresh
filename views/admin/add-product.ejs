<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css">
</head>

<body>
<%- include('../includes/nav.ejs') %>
    <main class="main">
        <h1 class="main__title">Add a new product</h1>
        <br />
        <form class="form" action='/admin/add-product' method='POST'>

            <label class="form__element" for="title">Title</label>
            <input class="form__input" type='text' name='title' />

            <label class="form__element" for="imglink">Image url</label>
            <input class="form__input" type='text' name='imglink' />

            <label class="form__element" for="price">Price</label>
            <input class="form__input" type='number' step="0.01" name='price' />

            <label class="form__element" for="description">Description</label>
            <textarea class="form__input" name="description" id="description" rows="5"></textarea>

            <button class="form__submit" type='submit'>Add</button>
        </form>
    </main>
<%- include('../includes/foot.ejs') %>