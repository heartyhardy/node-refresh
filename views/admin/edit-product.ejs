<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css">
</head>

<body>
<%- include('../includes/nav.ejs') %>
    <main class="main">
        <h1 class="main__title">Add a new product</h1>
        <br />
        <form class="form" action='/admin/<% if(edit){ %>edit-product<% } else {%>add-product<% } %>' method='POST'>

            <label class="form__element" for="title">Title</label>
            <input class="form__input" type='text' name='title' value="<% if(edit){ %><%= product.title %><% }else{%><% } %>" />

            <label class="form__element" for="imglink">Image url</label>
            <input class="form__input" type='text' name='imglink' value="<% if(edit){ %><%= product.img %><% }else{%><% } %>" />

            <label class="form__element" for="price">Price</label>
            <input class="form__input" type='number' step="0.01" name='price' value="<% if(edit){ %><%= product.price %><% }else{%><% } %>" />

            <label class="form__element" for="description">Description</label>
            <textarea class="form__input" name="description" id="description" rows="5"><% if(edit){ %><%= product.description %><% }else{%><% } %></textarea>

            <% if(edit) { %>
                <input type="hidden" name="productid" value="<%= product.id %>" />
            <% } %>

            <button class="form__submit" type='submit'><% if(edit){ %>Update<% } else {%>Add<% } %></button>
        </form>
    </main>
<%- include('../includes/foot.ejs') %>