<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/shop-layout.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>
    <main class='main-content'>
        <% if(products.length > 0) { %>
            <% for(product of products) { %>
                <article class='card product-item'>
                    <header class='card__header'>
                        <h1 class='product__title'><%= product.title %></h1>
                    </header>
                    <div class='card__image'>
                        <img src="<%= product.img %>" alt="A book" />
                    </div>
                    <div class='card__content'>
                        <h1 class='product__price'><%= product.price %></h1>
                        <p class='product__desc'><%= product.description %></p>
                    </div>
                    <div class='card__actions'>
                        <a class="edit" href="/admin/edit-product">Edit</a>
                        <form action="/admin/delete-product" method="POST">
                            <button class='add' type="submit">Delete</button>
                        </form>
                    </div>
                </article>
            <% } %>
        <% } else{ %>
            <h1 class='main__title'>No products to display</h1> 
        <% } %>
    </main>
<%- include('../includes/foot.ejs') %>
