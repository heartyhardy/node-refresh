<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
    <link rel="stylesheet" href="/css/shop-layout.css">
</head>
<body>
<%- include('includes/nav.ejs') %>
    <main class='main-content'>
        <% if(products.length > 0) { %>
            <% for(product of products) { %>
                <article class='card product-item'>
                    <header class='card__header'>
                        <h1 class='product__title'><%= product.title %></h1>
                    </header>
                    <div class='card__image'>
                        <img src="https://www.howardmansfield.com/wp-content/themes/toolbox/images/summer-over-autumn.png" alt="A book" />
                    </div>
                    <div class='card__content'>
                        <h1 class='product__price'>$25.99</h1>
                        <p class='product__desc'> Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quam, recusandae omnis ratione autem culpa in nulla consectetur fuga cum quos. Dolorum, officia? Dolores dicta ratione dolorum hic tempore iste quo!</p>
                    </div>
                    <div class='card__actions'>
                        <button class='add'>Add</button>
                    </div>
                </article>
            <% } %>
        <% } else{ %>
            <h1 class='main__title'>No products to display</h1> 
        <% } %>
    </main>
<%- include('includes/foot.ejs') %>
